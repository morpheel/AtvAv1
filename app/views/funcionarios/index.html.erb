 <div class="funcionarios index">
  <h1>Funcionários </h1>
    <%= form_tag (funcionarios_path format:"html"), :method => 'get' do %>  
      <div class="row">
        <div class="col-lg-12">
          <div class="row">
            <div class="col-lg-5  form-group">  
              <%= text_field_tag :nome, params[:nome], :class => 'form-control', :placeholder=>"Pesquisar Funcionário..." %>  
            </div>
            <div class="col-lg-2 form-group" style="float:left">
              <%= submit_tag "Pesquisar", name: nil, :class => "btn btn-primary" %>
            </div>
              <button style="float:right; margin-right: 20px; margin-bottom: 5px"class="btn btn-primary" type="button" onclick="javascript: location.href='<%= new_funcionario_path %>';"><i class="fa fa-user-plus"></i> Cadastrar Funcionario</button>
        </div>
      </div>
    </div>
    <% end %>
</div>
<div class="table-responsive">
  <%= paginate @funcionarios %>
  <table width="100%" class="table table-hover table-striped table-bordered" cellpadding="0" cellspacing="0">
    <thead>
      <tr>
        <th width="5%"><i class="fa fa-user-o"></i>  ID:</th>
        <th width="23%"><i class="fa fa-address-card-o"></i>  Nome</th>
        <th width="10%"><i class="fa fa-mobile"></i>  Telefone</th>
        <th width="20%"><i class="fa fa-map-marker"></i>  Endereço</th>
        <th width="15%"><i class="fa fa-at"></i>  Salario</th>
        <th width="12%" class="text-center"><i class="fa fa-gears fa-fw"></i></th>
      </tr>
    </thead>
    <tbody>
      <% @funcionarios.each do |funcionario| %>
        <tr>
          <td><%= funcionario.id %></td>
          <td><%= funcionario.nome %></td>
          <td><%= funcionario.telefone %></td>
          <td><%= funcionario.endereco %></td>
          <td><%= funcionario.salario %></td>
          <td class="text-center" onclick="window.location.reload(true);"><%= link_to 'Visualizar', funcionario, :class => 'btn btn-primary btn-xs', :style=>'color:white; margin-bottom:2px;' %>
          <%= link_to 'Alterar', edit_funcionario_path(funcionario), :class => 'btn btn-primary btn-xs', :style=>'color:white; margin-bottom:2px' %>
          <%= link_to 'Remover', funcionario, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-primary btn-xs', :style=>'color:white; margin-bottom: 2px' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<br>
</div>