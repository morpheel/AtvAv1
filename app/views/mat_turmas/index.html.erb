<h1>Matricular Aluno em Turma</h1>

<table>
  <thead>
    <tr>
      <th>Aluno</th>
      <th>Turma</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @mat_turmas.each do |mat_turma| %>
      <tr>
        <td><%= mat_turma.aluno.nome %></td>
        <td><%= mat_turma.turma.nome %></td>
        <td><%= link_to 'Show', mat_turma %></td>
        <td><%= link_to 'Edit', edit_mat_turma_path(mat_turma) %></td>
        <td><%= link_to 'Destroy', mat_turma, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

