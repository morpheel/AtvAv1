<div class="row">
  <div class="col-lg-4">
<h2 class="page-header" style="margin-left: 0%;border-bottom-style: default; border-bottom-width: 1px; border-bottom-color: black;">Cadastro de Usuário</h2>
</div>
</div>
<div class="cadastro form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
    <!-- Campos do formulário -->
    <div class="row">
      <div class="col-lg-2 form-group">
        <%= f.label :login,:class => 'control-label' %>
        <%= f.text_field :login, autofocus: true, autocomplete: "login", :class => 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-4 form-group">
        <%= f.label :nome, :class => 'control-label' %>
        <%= f.text_field :nome, autocomplete: "nome", :class => 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-4 form-group">
        <%= f.label :email, "Email", :class => 'control-label' %>
        <%= f.text_field :email, autocomplete: "email", :class => 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-2 form-group">   
        <%= f.label :password, "Senha", :class => 'control-label' %>
        <% if @minimum_password_length %>
          <em><br>(Mínimo de <%= @minimum_password_length %> caracteres)</em>
        <% end %><br />
          <%= f.password_field :password, autocomplete: "Senha", :class => 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-2 form-group" >  
        <%= f.label :password_confirmation, "Confirmação de Senha", :class => 'control-label' %>
        <%= f.password_field :password_confirmation, autocomplete: "Nova Senha", :class => 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-7 form-group">  
        <input type="submit" name="commit" class="btn btn-primary" value="Cadastrar" data-disable-with="Cadastrando..."/>
        <%= link_to 'Voltar', "/", :class => "btn btn-primary", :style=> 'color:#FFF', :onclick => 'window.location.reload(true);' %>
      </div>
    </div>
  <% end %>
</div>
<%= render "devise/shared/links" %>
