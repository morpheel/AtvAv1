<h2 class="page-header" style="margin-left: 0%;border-bottom-style: default; border-bottom-width: 1px; border-bottom-color: black;">Editar <%= resource_name.to_s.humanize %></h2>
<div class="cadastro form">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
    <%= devise_error_messages! %>
    <!-- Campos do formulário -->
    <div class="row">
      <div class="col-lg-2 form-group">
        <%= f.label :login,:class => 'control-label' %>
        <%= f.text_field :login, autofocus: true, autocomplete: "login", :class => 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-4 form-group">
        <%= f.label :nome, :class => 'control-label' %>
        <%= f.text_field :nome, autocomplete: "nome", :class => 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-4 form-group">
        <%= f.label :email, "Email", :class => 'control-label' %>
        <%= f.email_field :email, autocomplete: "email", :class => 'form-control' %>
      </div>
      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>
    </div>
    <div class="row">
      <div class="col-lg-2 form-group">   
        <%= f.label :password, "Nova Senha", :class => 'control-label' %>
        <br><em>(Deixe em branco para não alterar.</em>
        <% if @minimum_password_length %>
          <em>Mínimo de <%= @minimum_password_length %> caracteres)</em>
        <% end %><br />
          <%= f.password_field :password, autocomplete: "Senha", :class => 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-2 form-group" >  
        <%= f.label :password_confirmation, "Confirmação de Nova Senha", :class => 'control-label' %>
        <%= f.password_field :password_confirmation, autocomplete: "Nova Senha", :class => 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-2 form-group" >  
        <br>
        <%= f.label :current_password, "Senha Atual", :class => 'control-label' %><i>(É necessário para confirmar as mudanças)</i>
        <%= f.password_field :current_password, autocomplete: "Senha Atual", :class => 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-7 form-group">  
        <input type="submit" name="commit" class="btn btn-primary" value="Cadastrar" data-disable-with="Cadastrando..."/>
        <%= link_to 'Voltar', "/", :class => "btn btn-primary", :style=> 'color:#AAAAAA', :onclick => 'window.location.reload(true);' %>
      </div>
    </div>

  <% end %>
</div>
<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
