<%- if controller_name != 'sessions' %>
  <%= link_to "Entrar", new_session_path(resource_name), :class => 'btn btn-primary', :style=>'color:white; margin-bottom:2px;' %><br />
<% end -%>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "Novo Cadastro", new_registration_path(resource_name), :class => 'btn btn-primary btn', :style=>'color:white; margin-bottom:2px;' %><br />
<% end -%>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <div class="row">
	<div class="col-lg-7 form-group"> 
		<br>
  		<%= link_to "Esqueceu a senha?", new_password_path(resource_name), :class => 'btn btn-primary', :style=>'color:white; margin-bottom:2px;' %><br />
	</div>
  </div>
<% end -%>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Não recebeu instruções de confirmação?", new_confirmation_path(resource_name), :style=>'color:white; margin-bottom:2px;' %><br />
<% end -%>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Não recebeu instruções para desbloqueio?", new_unlock_path(resource_name), :style=>'color:white; margin-bottom:2px;' %><br />
<% end -%>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Entrar com #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), :style=>'color:white; margin-bottom:2px;' %><br />
  <% end -%>
<% end -%>
