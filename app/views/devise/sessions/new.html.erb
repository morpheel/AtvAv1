<div class="row">
  <div class="col-lg-4">
    <h2 class="page-header" style="margin-left: 0%;border-bottom-style: default; border-bottom-width: 1px; border-bottom-color: black;">Entrar</h2>
  </div>
</div>


<div class="login form">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row">
        <div class="col-lg-2 form-group">
          <%= f.label :login,:class => 'control-label' %>
          <%= f.text_field :login, autofocus: true, autocomplete: "login", :class => 'form-control' %>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-2 form-group">   
          <%= f.label :password, "Senha", :class => 'control-label' %>
          <%= f.password_field :password, autocomplete: "current-password", :class => 'form-control' %>
        </div>
    </div>
    <% if devise_mapping.rememberable? -%>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, 'Lembre de mim' %>
      </div>
    <% end -%>
    <div class="row">
      <div class="col-lg-7 form-group">  
        <input type="submit" name="commit" class="btn btn-primary" value="Entrar" data-disable-with="Logando...", style="color:white; margin-bottom:2px;" />
        <%= render "devise/shared/links" %>
      </div>
    </div>
    <% end %>
</div>


