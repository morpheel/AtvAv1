<div class="turma form">
  <%= form_with(model: turma, local: true) do |form| %>
    <% if turma.errors.any? %>
      <div id="error_explanation" class="panel panel-danger">
        <div class="panel-heading">
          <h3 class="panel-title"><%= pluralize(turma.errors.count, "error") %> ao salvar turma:</h3>
        </div>
        <div class="panel-body">
          <ul>
            <% turma.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    <% end %>
    <!-- Campos do formulÃ¡rio -->
    <div class="row">
      <div class="col-lg-1 form-group" >  
        <%= form.label :id, 'ID', :class => 'control-label' %>                 
        <%= form.text_field :id, :class => 'form-control' %>
      </div>
      <div class="col-lg-3 form-group">   
        <%= form.label :nome, :class => 'control-label' %>
        <%= form.text_field :nome, :class => 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-2 form-group" >  
        <%= form.label :sala_id, 'Sala', :class => 'control-label' %>                 
        <%= form.collection_select(:sala_id, Sala.all, :id, :salabloco, {:prompt=>"Selecionar Sala"}) %>
      </div>
      <div class="col-lg-4 form-group" >  
        <%= form.label :hora_id, 'Hora', :class => 'control-label' %>                 
        <%= form.collection_select(:hora_id, Hora.all, :id, :iniciofim, {:prompt=>"Selecionar Hora"}) %>
      </div>
    </div>
    <div class="row">
      <div class="col-lg-7 form-group">  
        <input type="submit" name="commit" class="btn btn-primary" value="Salvar" data-disable-with="Salvando Turma..."/>
        <%= link_to 'Voltar', turmas_path, :class => "btn btn-primary", :style=> 'color:#AAAAAA', :onclick => 'window.location.reload(true);' %>
      </div>
    </div>
  <% end %>
</div>