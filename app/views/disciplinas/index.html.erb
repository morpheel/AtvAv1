 <div class="disciplinas index">
  <h1>Disciplinas </h1>
    <%= form_tag (disciplinas_path format:"html"), :method => 'get' do %>  
      <div class="row">
        <div class="col-lg-12">
          <div class="row">
            <div class="col-lg-5  form-group">  
              <%= text_field_tag :nome, params[:nome], :class => 'form-control', :placeholder=>"Pesquisar Disciplinas..." %>  
            </div>
            <div class="col-lg-2 form-group" style="float:left">
              <%= submit_tag "Pesquisar", name: nil, :class => "btn btn-primary" %>
            </div>
              <button style="float:right; margin-right: 20px; margin-bottom: 5px"class="btn btn-primary" type="button" onclick="javascript: location.href='<%= new_disciplina_path %>';"><i class="fa fa-user-plus"></i> Cadastrar Disciplina</button>
        </div>
      </div>
    </div>
    <% end %>
</div>
<div class="table-responsive">
  <%= paginate @disciplinas %>
  <table width="100%" class="table table-hover table-striped table-bordered" cellpadding="0" cellspacing="0">
    <thead>
      <tr>
        <th width="5%"><i class="fa fa-user-o"></i>  ID:</th>
        <th width="23%"><i class="fa fa-address-card-o"></i>  Nome</th>
        <th width="10%"><i class="fa fa-clock-o"></i>  Carga Hor√°ria</th>
        <th width="20%"><i class="fa fa-user"></i>  Professor</th>
        <th width="20%"><i class="fa fa-group"></i>  Turma</th>
        <th width="12%" class="text-center"><i class="fa fa-gears fa-fw"></i></th>
      </tr>
    </thead>
    <tbody>
      <% @disciplinas.each do |disciplina| %>
        <tr>
          <td><%= disciplina.id %></td>
          <td><%= disciplina.nome %></td>
          <td><%= disciplina.ch %></td>
          <td><%= disciplina.professor.nome %></td>
          <td><%= disciplina.turma.nome %></td>
          <td class="text-center" ><%= link_to 'Visualizar', disciplina, :class => 'btn btn-primary btn-xs', :style=>'color:white; margin-bottom:2px;' %>
          <%= link_to 'Alterar', edit_disciplina_path(disciplina), :class => 'btn btn-primary btn-xs', :style=>'color:white; margin-bottom:2px' %>
          <%= link_to 'Remover', disciplina, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-primary btn-xs', :style=>'color:white; margin-bottom: 2px' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<br>
</div>