<div class="alunos index">
  <h1>Alunos </h1>
    <%= form_tag (alunos_path format:"html"), :method => 'get' do %>  
      <div class="row">
        <div class="col-lg-12">
          <div class="row">
            <div class="col-lg-5  form-group">  
              <%= text_field_tag :nome, params[:nome], :class => 'form-control', :placeholder=>"Pesquisar Aluno..." %>  
            </div>
            <div class="col-lg-2 form-group" style="float:left">
              <%= submit_tag "Pesquisar", name: nil, :class => "btn btn-primary" %>
            </div>
              <button style="float:right; margin-right: 20px; margin-bottom: 5px"class="btn btn-primary" type="button" onclick="javascript: location.href='<%= new_aluno_path %>';"><i class="fa fa-user-plus"></i> Cadastrar Aluno</button>
        </div>
      </div>
    </div>
    <% end %>
</div>
<div class="table-responsive">
  <%= paginate @alunos %>
  <table width="100%" class="table table-hover table-striped table-bordered" cellpadding="0" cellspacing="0">
    <thead>
      <tr>
        <th width="5%"><i class="fa fa-user-o"></i>  ID:</th>
        <th width="23%"><i class="fa fa-address-card-o"></i>  Nome</th>
        <th width="10%"><i class="fa fa-calendar"></i>  Data de Nascimento</th>
        <th width="20%"><i class="fa fa-map-marker"></i>  Endere√ßo</th>
        <th width="12%" class="text-center"><i class="fa fa-gears fa-fw"></i></th>
      </tr>
    </thead>
    <tbody>
      <% @alunos.each do |aluno| %>
        <tr>
          <td><%= aluno.id %></td>
          <td><%= aluno.nome %></td>
          <td><%= aluno.dataNasc %></td>
          <td><%= aluno.endereco %></td>
          <td class="text-center" onclick="window.location.reload(true);"><%= link_to 'Visualizar', aluno, :class => 'btn btn-primary btn-xs', :style=>'color:white; margin-bottom:2px;' %>
          <%= link_to 'Alterar', edit_aluno_path(aluno), :class => 'btn btn-primary btn-xs', :style=>'color:white; margin-bottom:2px' %>
          <%= link_to 'Remover', aluno, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-primary btn-xs', :style=>'color:white; margin-bottom: 2px' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<br>
</div>