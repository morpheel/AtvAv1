 <div class="professors index">
  <h1>Professores </h1>
    <%= form_tag professors_path( format:"html"), :method => 'get' do %>  
      <div class="row">
        <div class="col-lg-12">
          <div class="row">
            <div class="col-lg-5  form-group">  
              <%= text_field_tag :nome, params[:nome], :class => 'form-control', :placeholder=>"Digite o nome do aluno para pesquisar" %>  
            </div>
            <div class="col-lg-2 form-group">
              <%= submit_tag "Pesquisar", :class => "btn btn-primary" %>
            </div>
            
            <div class="col-lg-2 form-group">  
              <span class="input-group-btn" style="display: inline-block;"><button class="btn btn-primary" type="button" onclick="javascript: location.href='<%= new_professor_path %>';"><i class="fa fa-plus-circle"></i> Cadastrar Professor</button></span>
            </div>
        </div>
      </div>
    </div>
    <% end %>
</div>
<div class="table-responsive">
  <table width="100%" class="table table-hover table-striped table-bordered" cellpadding="0" cellspacing="0">
    <thead>
      <tr>
        <th width="5%">ID:</th>
        <th width="23%">Nome</th>
        <th width="20%">Email</th>
        <th width="10%">Telefone</th>
        <th width="20%">Endere√ßo</th>
        <th width="12%" class="text-center"><i class="fa fa-gears fa-fw"></i></th>
      </tr>
    </thead>

    <tbody>
      <% @professors.each do |professor| %>
        <tr>
          <td><%= professor.id %></td>
          <td><%= professor.nome %></td>
          <td><%= professor.email %></td>
          <td><%= professor.telefone %></td>
          <td><%= professor.endereco %></td>
          <td class="text-center"><%= link_to 'Visualizar', professor, :class => 'btn btn-primary btn-xs', :style=>'color:white; margin-bottom:2px' %>
          <%= link_to 'Alterar', edit_professor_path(professor), :class => 'btn btn-primary btn-xs', :style=>'color:white; margin-bottom:2px' %>
          <%= link_to 'Remover', professor, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-primary btn-xs', :style=>'color:white' %></td>
        
        </tr>
      <% end %>
    </tbody>
  </table>
<br>
</div>

<p id="notice"><%= notice %></p>

<h1>Professors</h1>

<table>
  <thead>
  <div class = "table-responsive">
    <%= paginate @professors %>  
  </div>
    <tr>
      <th>Nome</th>
      <th>Email</th>
      <th>Telefone</th>
      <th>Endereco</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @professors.each do |professor| %>
      <tr>
        <td><%= professor.nome %></td>
        <td><%= professor.email %></td>
        <td><%= professor.telefone %></td>
        <td><%= professor.endereco %></td>
        <td><%= link_to 'Show', professor %></td>
        <td><%= link_to 'Edit', edit_professor_path(professor) %></td>
        <td><%= link_to 'Destroy', professor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Professor', new_professor_path %>
