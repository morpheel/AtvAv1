 <div class="avaliacaos index">
  <h1>Avaliações </h1>
    <%= form_tag (avaliacaos_path format:"html"), :method => 'get' do %>  
      <div class="row">
        <div class="col-lg-12">
          <div class="row">
            <div class="col-lg-5  form-group">  
              
            </div>
            <div class="col-lg-2 form-group" style="float:left">
              
            </div>
              <button style="float:right; margin-right: 20px; margin-bottom: 5px"class="btn btn-primary" type="button" onclick="javascript: location.href='<%= new_avaliacao_path %>';"><i class="fa fa-user-plus"></i> Criar Avaliação</button>
        </div>
      </div>
    </div>
    <% end %>
</div>
<div class="table-responsive">
  <%= paginate @avaliacaos %>
  <table width="100%" class="table table-hover table-striped table-bordered" cellpadding="0" cellspacing="0">
    <thead>
      <tr>
        <th width="15%"><i class="fa fa-book"></i>  Disciplina</th>
        <th width="15%"><i class="fa fa-file-o"></i>  Descrição</th>
        <th width="10%"><i class="fa fa-calendar"></i>  Data</th>
        <th width="10%" class="text-center"><i class="fa fa-gears fa-fw"></i></th>
        <th width="15%" class="text-center"><i class="fa fa-gears fa-fw"></i></th>
      </tr>
    </thead>
    <tbody>
      <% @avaliacaos.each do |avaliacao| %>
        <tr>
          <td><%= avaliacao.disciplina.nome %></td>
          <td><%= avaliacao.descricao %></td>
          <td><%= avaliacao.data %></td>
          <td class="text-center"><%= link_to 'Visualizar', avaliacao, :class => 'btn btn-primary btn-xs', :style=>'color:white; margin-bottom:2px;' %>
            <%= link_to 'Atribuir Notas', provas_avaliacaos_path(avaliacao), :class => 'btn btn-primary btn-xs', :style=>'color:white; margin-bottom:2px;' %>
            
          <td class="text-center"><%= link_to "Exportar - Excel", relatorioExcel_avaliacaos_path(avaliacao, format: :xlsx), :target => "_blank", :class => 'btn btn-primary btn-xs', :style=>'color:white; margin-bottom:2px;' %>
          <%= link_to 'Alterar', edit_avaliacao_path(avaliacao), :class => 'btn btn-primary btn-xs', :style=>'color:white; margin-bottom:2px' %>
          <%= link_to 'Remover', avaliacao, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn-primary btn-xs', :style=>'color:white; margin-bottom: 2px' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<br>
</div>
