<%= form_with(model: avaliacao, local: true) do |form| %>
  <% if avaliacao.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(avaliacao.errors.count, "error") %> prohibited this avaliacao from being saved:</h2>

      <ul>
      <% avaliacao.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :nome %>
    <%= form.text_field :nome %>
  </div>

  <div class="field">
    <%= form.label :data %>
    <%= form.date_field :data %>
  </div>

  <div class="field">
    <%= form.label :disciplina_id %>
    <%= form.collection_select(:disciplina_id, Disciplina.all, :id, :nome, {prompt: "Selecionar Disciplina"}) %>
  </div>

  <h2> Nota </h2>
  <div id="notas">
    <%= form.fields_for :notas do |nota| %>
      <%= render 'nota_fields', f: nota %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'Adicionar Nota', form, :notas %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
